# Production Environment Variables Template
# Copy this to .env and fill in your actual values

# ============================================
# DATABASE CONFIGURATION (PythonAnywhere)
# ============================================
DB_NAME=yourusername$focushealthacademy
DB_USER=yourusername
DB_PASSWORD=your_postgresql_password_from_pythonanywhere
DB_HOST=yourusername-0000.postgres.pythonanywhere-services.com
DB_PORT=10000

# ============================================
# DJANGO SETTINGS
# ============================================
# Generate a new secret key for production!
# Run: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-production-secret-key-min-50-characters

DEBUG=False

# Add your domain and PythonAnywhere subdomain
ALLOWED_HOSTS=api.focushealth-academy.com,yourusername.pythonanywhere.com

# ============================================
# CORS SETTINGS
# ============================================
# Your website domain (where the website is hosted)
CORS_ALLOWED_ORIGINS=https://focushealth-academy.com,https://www.focushealth-academy.com

# ============================================
# EMAIL SETTINGS (Namecheap)
# ============================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=mail.privateemail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=inscriptions@focushealth-academy.com
EMAIL_HOST_PASSWORD=your_email_password
DEFAULT_FROM_EMAIL=Focus Health Academy <inscriptions@focushealth-academy.com>

# ============================================
# STRIPE CONFIGURATION (LIVE KEYS!)
# ============================================
# Get these from: https://dashboard.stripe.com/apikeys
# Make sure you're in LIVE mode, not TEST mode!
STRIPE_SECRET_KEY=sk_live_your_live_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_live_your_live_publishable_key_here

# Get this from: https://dashboard.stripe.com/webhooks
# Create endpoint: https://api.focushealth-academy.com/api/v1/payments/webhook/
STRIPE_WEBHOOK_SECRET=whsec_your_live_webhook_secret_here

# ============================================
# OPTIONAL SETTINGS
# ============================================
FRONTEND_DOMAIN=https://focushealth-academy.com
